  },
  // JWT鉴权
  "Jwt": {
    // 发行人
    "Issuer": "Lenceas",
    // 接收人
    "Audience": "MorningStar",
    // 密钥
    "SecretKey": "7rCEhhwScV2@GxaD*pqkr3TvV#$2jK3A",
    // 过期分钟
    "ExpiryInMinutes": 120
  },
  // 跨域
  "Cors": {
    // 跨域策略名称
    "PolicyName": "CorsIpAccess",
    // 允许跨域所有IP
    "EnableAllIPs": true,
    // 允许跨域IP白名单集合（EnableAllIPs改为false生效）
    "IPs": "http://127.0.0.1:8080,http://localhost:8080,http://81.71.136.3:8080"
  },
  // 雪花算法
  "SnowFlakeID": {
    // 雪花算法ID 数据中心ID
    "SnowFlakeTwepoch": 24,
    // 雪花算法ID 机器ID
    "SnowFlakeWorkerIdBits": 24
  },
  // IP限流
  "IpRateLimiting": {
    // 是否启用端点限流
    "EnableEndpointRateLimiting": true,
    // 是否堆叠被阻塞的请求
    "StackBlockedRequests": false,
    // 请求头中真实 IP 的标头
    "RealIpHeader": "X-Real-IP",
    // 请求头中客户端标识的标头
    "ClientIdHeader": "X-ClientId",
    // 超过配额时返回的 HTTP 状态码
    "HttpStatusCode": 429,
    // IP 白名单，允许不受限制的 IP 地址
    "IpWhitelist": [],
    // 端点白名单，允许不受限制的端点
    "EndpointWhitelist": [],
    // 客户端白名单，允许不受限制的客户端
    "ClientWhitelist": [],
    // 通用规则，适用于所有端点的请求限制
    "GeneralRules": [
      {
        // 端点路径（使用 * 表示所有端点）
        "Endpoint": "*",
        // 时间周期
        "Period": "1s",
        // 允许的最大请求数
        "Limit": 24
      }
    ],
    // 配额超限时的响应
    "QuotaExceededResponse": {
      // 响应内容
      "Content": "{{\"code\":429,\"success\":false,\"data\":null,\"errors\":\"请求过于频繁，请稍后重试！\",\"dateTime\":\"\"}}",
      // 响应内容类型
      "ContentType": "application/json",
      // 响应状态码
      "StatusCode": 429
    }
  }
}